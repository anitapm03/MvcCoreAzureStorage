@model List<string>

<h1>Azure Storage Files</h1>

<a asp-action="UploadFile" asp-controller="AzureFiles"
    class="btn btn-success">
    UploadFile
</a>

@if(Model != null)
{
    <ul class="list-group">
        @foreach (string fileName in Model)
        {
            <li class="list-group-item">
                @fileName
                <a asp-action="ReadFile" asp-controller="AzureFiles"
                   asp-route-filename="@fileName" class="btn btn-info">
                    ReadFile
                </a>
                <a asp-action="DeleteFile" asp-controller="AzureFiles"
                   asp-route-filename="@fileName" class="btn btn-danger">
                    Delete
                </a>
            </li>
        }
    </ul>
}
